{
    "compilerOptions": {
        "allowJs": false,
        "allowSyntheticDefaultImports": true,
        "baseUrl": "./packages",
        "declaration": true,
        "declarationMap": true,
        "composite": false,
        "esModuleInterop": true,
        "module": "ESNext",
        "moduleResolution": "node",
        "noImplicitAny": true,
        "noUnusedLocals": true,
        "outDir": "dist",
        "sourceMap": true,
        "strictNullChecks": true,
        "target": "ES2017"
    }
}
