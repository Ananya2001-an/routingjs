{
    "compilerOptions": {
        "allowJs": false,
        "allowSyntheticDefaultImports": true,
        "baseUrl": "./src",
        "declaration": true,
        "declarationMap": true,
        "composite": false,
        "esModuleInterop": true,
        "lib": ["es2020"],
        "module": "ESNext",
        "moduleResolution": "node",
        "noImplicitAny": true,
        "noUnusedLocals": true,
        "outDir": "dist",
        "sourceMap": true,
        "strictNullChecks": true,
        "target": "ESNext"
    },
    "include": ["src"],
    "exclude": [
        "node_modules",
        "dist"
        //  "**/*.test.ts"
    ]
}
